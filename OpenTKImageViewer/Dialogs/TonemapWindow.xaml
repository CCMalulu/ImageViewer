<Window x:Class="OpenTKImageViewer.Dialogs.TonemapWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenTKImageViewer.Dialogs"
        mc:Ignorable="d"
        Title="Tonemapper" Height="300" Width="600"
        ResizeMode="NoResize" Background="#eee"
        Icon="../Icons/tonemap.png"
        Closing="TonemapWindow_OnClosing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Border Padding="5">
            <StackPanel>
                <TextBlock Text="Used Tonemapper:" 
                           Margin="0 0 0 2"/>
                <ListBox Height="200"
                         ScrollViewer.VerticalScrollBarVisibility="Visible"
                         Margin="0 0 0 10"
                         x:Name="ListBoxMapper"
                         SelectionChanged="ListBoxMapper_OnSelectionChanged">
                </ListBox>

                <Grid HorizontalAlignment="Right">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Button Content="_Add" Margin="0 0 10 0" Width="60" Click="ButtonAdd_OnClick"/>
                    <Button Grid.Column="1" Content="Apply" Width="60" Click="ButtonApply_OnClick"/>
                </Grid>
            </StackPanel>
        </Border>
        
        <!-- Custom Panel -->
        <Border Padding="5 5 0 5" Grid.Column="1" BorderThickness="1 0 0 0" BorderBrush="Gray">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Border Padding="0 0 5 0">
                    <StackPanel x:Name="StackPanelMapper"/>
                </Border>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>



