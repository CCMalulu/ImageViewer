<Window x:Class="OpenTKImageViewer.Dialogs.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenTKImageViewer.Dialogs"
        mc:Ignorable="d"
        Title="ProgressWindow" Height="150" Width="300"
        ResizeMode="NoResize">
    <Border Padding="5">
        <StackPanel>
            <Label Content="Applying Tonemappers" 
                   Margin="0 0 0 10"
                   FontSize="16"/>
            <ProgressBar Minimum="0" 
                         Maximum="100" 
                         Value="75"
                         Height="20"
                         Margin="0 0 0 10"
                         x:Name="ProgressBar"/>
            <TextBlock Text="Task 5/7"
                       x:Name="TextDescription"
                       TextWrapping="Wrap"/>
        </StackPanel>
    </Border>
</Window>



