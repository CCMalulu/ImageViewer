<Window x:Class="TextureViewer.MipMapWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextureViewer"
        mc:Ignorable="d"
        Title="Mipmaps" Height="300" Width="200" 
        ResizeMode="NoResize" Background="#eee"
        Closing="MipMapWindow_OnClosing">

    <Border Padding="5">
        
        <StackPanel>
            <TextBlock Text="Mipmap:" Margin="0 0 0 2"/>
            <ListBox SelectedIndex="0">
                <ListBoxItem>64x64</ListBoxItem>
                <ListBoxItem>32x32</ListBoxItem>
                <ListBoxItem>16x16</ListBoxItem>
                <ListBoxItem>8x8</ListBoxItem>
                <ListBoxItem>4x4</ListBoxItem>
            </ListBox>
        </StackPanel>
    </Border>
</Window>
