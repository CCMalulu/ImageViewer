<Window x:Class="ImageViewer.Views.Dialog.PixelColorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageViewer.Views.Dialog"
        mc:Ignorable="d"
        Title="Pixel Color"
        Icon="../../Icons/eyedropper.png" 
        Width="280"
        ResizeMode="NoResize"
        SizeToContent="Height"
        Style="{StaticResource WindowStyle}"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <Thickness x:Key="DefaultMargin" Top="0" Left="0" Right="0" Bottom="2"/>
    </Window.Resources>
    <StackPanel Margin="5">
        <TextBlock 
            Text="Double click box to copy content to clipboard"
            Margin="0 0 0 5"
            TextWrapping="Wrap"/>

        <StackPanel x:Name="ColorStackPanel"/>

        <Button 
            Content="OK"
            Width="80"
            HorizontalAlignment="Right"
            Margin="0 5 0 0"
            Click="OkOnClick"/>
    </StackPanel>
</Window>
